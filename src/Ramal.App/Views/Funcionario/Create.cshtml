@model Ramal.App.ViewModels.FuncionarioViewModel

@{
    ViewData["Title"] = "Novo Ramal";
}

<h1 class="mt-5 mb-4">@ViewData["Title"]</h1>

<hr />
<div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
               <label asp-for="SetorId" class="form-label"></label>
                <select asp-for="SetorId" class="form-control" asp-items="@(new SelectList(Model.Setores, "Id", "Nome"))">
                    <option></option>
                </select>

                 <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Ramal" class="form-label"></label>
                <input asp-for="Ramal" class="form-control" />
                <span asp-validation-for="Ramal" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="align-items-center">
                <input class="btn btn-primary me-2" type="submit" value="Salvar" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
