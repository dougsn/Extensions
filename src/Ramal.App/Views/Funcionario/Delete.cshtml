@model Ramal.App.ViewModels.FuncionarioViewModel

@{
    ViewData["Title"] = "Deletar - " + Model.Nome;
}

<h1 class="mt-5">@ViewData["Title"]</h1>

<h3 class="mt-4 mb-4">Você tem certeza dessa deleção?</h3>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Setor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Setor.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ramal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ramal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </form>
</div>
